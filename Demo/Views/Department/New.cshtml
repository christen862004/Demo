@model Department
@{
    ViewData["Title"] = "New";
}

<h1>New DEpartment</h1>
<form method="post" action="/Department/SaveNew">
    <!--Data insert using input tag-->
    <label >NAme</label>
    <input type="text"
        name="Name" id="Name" value="@Model?.Name" 
        class="form form-control" />
    <br />
    <label>Manager NAme</label>
    <input type="text"
        name="ManagerName" id="ManagerName" value="@Model?.ManagerName"
        class="form form-control" />
    <input type="submit" class="btn btn-success" />
</form>
