@model Employee
@{
    ViewData["Title"] = "New";
    SelectList DeptItems = new SelectList(ViewBag.DeptList,"Id","Name");
}

<h1>New</h1>
<!--using Tag helper by default method ==> Post -->
<form method="post" asp-action="New" asp-controller="Employee">
    <div asp-validation-summary="All" class="text-danger"></div>
    <!--Fill data-->
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form form-control"/>
        <span asp-validation-for="Address" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="Salary"></label>
        <input asp-for="Salary" class="form form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="DepartmentID"></label>
        
        <select asp-for="DepartmentID" asp-items="DeptItems" class="form form-control">
            <option value="0" > --Select Department-- </option>
        </select>
        <span asp-validation-for="DepartmentID" class="text-danger"></span>

    </div>
    <input type="submit" value="Create" />
</form>
<!--Import Jquery PAckages To Make Client Side Validation-->
<!--Jquery-->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<!--Jquery Valiadtion-->
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<!--Jquery Unbtrosive validation-->
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
