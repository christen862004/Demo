    @* <input type="hidden" name="Id" value="@Model.Id" /> *@
    <label>Name</label>
    <input type="text" id="Name" name="Name" value="@Model.Name" class="form-check form-control" />
    <label>Image</label>
    <input type="text" id="Image" name="Image" value="@Model.Image" class="form-check form-control" />
    <label>Salary</label>
    <input type="number" id="Salary" name="Salary" value="@Model.Salary" class="form-check form-control" />
    <label>Address</label>
    <input type="text" id="Address" name="Address" value="@Model.Address" class="form-check form-control" />
    <label>Age</label>
    <input type="number" id="Age" name="Age" value="@Model.Age" class="form-check form-control" />
    <label>Department</label>
    @* <input type="number" id="DepartmentID" name="DepartmentID" value="@Model.DepartmentID" class="form-check form-control" /> *@
    <select class="form-check form-control" id="DepartmentID" name="DepartmentID">
        @foreach (Department DeptItem in ViewBag.DeptList)
        {
            if (DeptItem.Id == Model.DepartmentID)//Pk=Fk
            {
                <option value="@DeptItem.Id" selected>@DeptItem.Name
                </option>
            }
            else
            {
                <option value="@DeptItem.Id">@DeptItem.Name </option>
            }
        }
   </select>
    <input type="submit" value="Save" class="btn btn-success" />
</form>

